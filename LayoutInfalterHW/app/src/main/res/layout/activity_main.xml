<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/aboutBangladesh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="বাংলাদেশকে জানুন"
            android:gravity="center"
            android:textColor="@color/inBackgroundTextColor"
            android:textSize="23sp"
            android:padding="5dp"
            android:background="@color/BackgrounColor"
            />

        <ScrollView
            android:layout_below="@id/aboutBangladesh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/nevigationSection"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:paddingTop="2dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="2dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/para1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="প্রাকৃতিক রূপবৈচিত্র্যে ভরা আমাদের এই বাংলাদেশ। এই দেশে পরিচিত অপরিচিত অনেক পর্যটক-আকর্ষক স্থান আছে। এর মধ্যে প্রত্নতাত্ত্বিক নিদর্শন, ঐতিহাসিক মসজিদ এবং মিনার, পৃথিবীর দীর্ঘতম প্রাকৃতিক সমুদ্র সৈকত, পাহাড়, অরণ্য ইত্যাদি অন্যতম। এদেশের প্রাকৃতিক সৌন্দর্য পর্যটকদের মুগ্ধ করে। বাংলাদেশের প্রত্যেকটি এলাকা বিভিন্ন স্বতন্ত্র্র বৈশিষ্ট্যে বিশেষায়িত । \n\nবাংলাদেশ দক্ষিণ এশিয়ার উত্তর পূর্ব অংশে অবস্থিত। বাংলাদেশের উত্তর সীমানা থেকে কিছু দূরে হিমালয় পর্বতমালা এবং দক্ষিণে বঙ্গোপসাগর। পশ্চিমে ভারতের পশ্চিমবঙ্গ, পূর্বে ভারতের ত্রিপুরা, মিজোরাম রাজ্য এবং মায়ানমারের পাহাড়ী এলাকা। অসংখ্য নদ-নদী পরিবেষ্টিত বাংলাদেশ প্রধানত সমতল ভূমি। দেশের উল্লেখযোগ্য নদ-নদী হলো- পদ্মা, ব্রহ্মপুত্র, সুরমা, কুশিয়ারা, মেঘনা ও কর্ণফুলী।একেকটি অঞ্চলের প্রাকৃতিক সৌন্দর্য ও খাদ্যাভ্যাস বিভিন্ন ধরনের। বাংলাদেশ রয়েল বেঙ্গল টাইগারের দেশ যার বাস সুন্দরবনে। এছাড়াও এখানে রয়েছে লাল মাটি দিয়ে নির্মিত মন্দির। এদেশে উল্লেখযোগ্য পর্যটন এলাকার মধ্যে রয়েছে: শ্র্রীমঙ্গল, যেখানে মাইলের পর মাইল জুড়ে রয়েছে চা বাগান। প্রত্নতাত্ত্বিক নিদর্শনের স্থানগুলোর মধ্যে রয়েছে–ময়নামতি, মহাস্থানগড় এবং পাহাড়পুর। রাঙ্গামাট, কাপ্তাই এবং কক্সবাজার প্রাকৃতিক দৃশ্যের জন্য খ্যাত। সুন্দরবনে আছে বন্য প্রাণী এবং পৃথিবীখ্যাত ম্যানগ্রোভ ফরেস্ট এ বনাঞ্চলে অবস্থিত ।"
                        android:textSize="15.5sp"
                        />

                    <TextView
                        android:id="@+id/para2"
                        android:layout_below="@id/para1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="এক নজরে বাংলাদেশ"
                        android:gravity="center"
                        android:textSize="17sp"
                        android:padding="5dp"
                        android:layout_marginBottom="2dp"
                        />

                    <LinearLayout
                        android:id="@+id/para3"
                        android:layout_below="@id/para2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <include
                            layout="@layout/about_bangladesh"
                            />

                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/nevigationSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bottom_shade"
            android:paddingTop="2dp"
            >

           <TextView
               android:id="@+id/bivagList"
               android:layout_width="fill_parent"
               android:layout_height="55dp"
               android:layout_weight="1"
               android:text="বিভাগসমূহ"
               android:gravity="center"
               android:textSize="17.7dp"
               android:textColor="@color/TextColor"
               android:textStyle="bold"
               />

            <ImageView
                android:id="@+id/homeButton"
               android:layout_width="fill_parent"
               android:layout_height="40dp"
               android:src="@drawable/home_button"
               android:layout_weight="1"
                android:background="@drawable/shade"
                android:layout_gravity="center"
               />

            <TextView
                android:id="@+id/aboutSekhHasina"
               android:layout_width="fill_parent"
               android:layout_height="55dp"
                android:text="শেখ হাসিনা"
               android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/TextColor"
                android:textSize="17.7dp"
               />


        </LinearLayout>


    </RelativeLayout>

</LinearLayout>