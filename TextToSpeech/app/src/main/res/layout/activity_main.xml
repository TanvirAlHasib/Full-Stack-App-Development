<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="3dp"
    android:background="@color/Off_White"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/privacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Privacy Statement"
                    android:textSize="30sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:background="@color/CherryRed"
                    android:layout_marginBottom="30dp"
                    />

                <TextView
                    android:id="@+id/heading"
                    android:layout_below="@id/privacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter text to make it speech"
                    android:textSize="22sp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"
                    />

                <EditText
                    android:id="@+id/edText"
                    android:layout_below="@id/heading"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:textSize="23sp"
                    android:hint="Text"
                    android:gravity="center"
                    android:inputType="text"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />

                <LinearLayout
                    android:layout_below="@id/edText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >

                    <Button
                        android:id="@+id/bTap"
                        android:layout_width="fill_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Tap Me"
                        android:textStyle="bold"
                        android:textSize="23sp"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/CherryRed"
                        android:layout_centerHorizontal="true"
                        />

                    <Button
                        android:id="@+id/bReset"
                        android:layout_width="fill_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Reset"
                        android:textStyle="bold"
                        android:textSize="23sp"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/CherryRed"
                        android:layout_centerHorizontal="true"
                        />

                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>