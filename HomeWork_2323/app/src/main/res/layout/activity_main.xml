<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="1dp"
    >

    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Write a program to display the sum of the series upto n terms [ 9 + 99 + 999 + 9999 ...]"
        android:textSize="26sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@color/ForestGreen"
        android:layout_marginBottom="2dp"
        android:padding="5dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:id="@+id/n_thNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter your n_th term number"
                    android:textColor="@color/white"
                    android:background="@color/ForestGreen"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_marginBottom="10dp"
                    />

                <EditText
                    android:id="@+id/edNumber"
                    android:layout_below="@id/n_thNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:hint="n_th number"
                    android:inputType="number"
                    android:layout_marginBottom="15dp"
                    />

                <TextView
                    android:id="@+id/tvDisplay"
                    android:layout_below="@id/edNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="23sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_marginBottom="10dp"
                    />

                <Button
                    android:id="@+id/bCalculate"
                    android:layout_below="@id/tvDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calculate"
                    android:textColor="@color/white"
                    android:textSize="23sp"
                    android:backgroundTint="@color/ForestGreen"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="2dp"
                    />


            </RelativeLayout>


        </LinearLayout>


    </ScrollView>

</LinearLayout>