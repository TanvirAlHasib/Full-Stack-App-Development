<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="3dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/privacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Privacy Statement"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="5dp"
            android:background="@color/Forest_Green"
            android:layout_marginBottom="30dp"
            />

        <TextView
            android:id="@+id/question"
            android:layout_below="@id/privacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter marks of these subjects "
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="21sp"
            android:layout_marginBottom="10dp"
            />

        <LinearLayout
            android:id="@+id/leyout"
            android:layout_below="@id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_marginBottom="20dp"
            >

            <EditText
                android:id="@+id/physics"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:hint="phy"
                android:gravity="center"
                android:inputType="number"
                />
            <EditText
                android:id="@+id/chemistry"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:hint="chem"
                android:gravity="center"
                android:inputType="number"
                />
            <EditText
                android:id="@+id/math"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:hint="math"
                android:gravity="center"
                android:inputType="number"
                />
            <EditText
                android:id="@+id/biology"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:hint="bio"
                android:gravity="center"
                android:inputType="number"
                />
            <EditText
                android:id="@+id/computer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:hint="ICT"
                android:gravity="center"
                android:inputType="number"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tvDisplay"
            android:layout_below="@id/leyout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:textSize="23sp"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_marginBottom="20dp"
            />

        <Button
            android:id="@+id/bCalculate"
            android:layout_below="@id/tvDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculate"
            android:textStyle="bold"
            android:textSize="22sp"
            android:backgroundTint="@color/Forest_Green"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            />

    </RelativeLayout>

</LinearLayout>