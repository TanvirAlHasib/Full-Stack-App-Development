<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="3dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/privacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Privay Statement"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:padding="5dp"
            android:background="@color/Light_Blue"
            android:textStyle="bold"
            android:layout_marginBottom="30dp"
            />

        <TextView
            android:id="@+id/question"
            android:layout_below="@id/privacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter the number of day of week, I will tell you the day"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="center"
            android:padding="5dp"
            android:layout_marginBottom="15dp"
            />

        <EditText
            android:id="@+id/edWeekNumber"
            android:layout_below="@id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="day number"
            android:gravity="center"
            android:textSize="23sp"
            android:textColor="@color/black"
            android:inputType="number"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:id="@+id/tvDisplay"
            android:layout_below="@id/edWeekNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:padding="5dp"
            android:text=""
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            />

        <Button
            android:id="@+id/bCalculate"
            android:layout_below="@id/tvDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Calculate"
            android:textStyle="bold"
            android:textSize="23sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/Light_Blue"
            />

    </RelativeLayout>

</LinearLayout>