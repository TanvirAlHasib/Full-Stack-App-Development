<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="3dp"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/privacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Privacy Statement"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="@color/Fuchsia"
                    android:layout_marginBottom="25dp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/heading"
                    android:layout_below="@id/privacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Get the number sequance"
                    android:gravity="center"
                    android:textSize="23sp"
                    android:background="@color/Fuchsia"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="20dp"
                    />

                <TextView
                    android:id="@+id/question"
                    android:layout_below="@id/heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter three numbers...."
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_marginBottom="15dp"
                    />

                <LinearLayout
                    android:id="@+id/edLayout"
                    android:layout_below="@id/question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    >

                    <EditText
                        android:id="@+id/edNumber_1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:hint="number_1"
                        android:textSize="22sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_weight="1"
                        />

                    <EditText
                        android:id="@+id/edNumber_2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:hint="number_2"
                        android:textSize="22sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_weight="1"
                        />

                    <EditText
                        android:id="@+id/edNumber_3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:hint="number_3"
                        android:textSize="22sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_weight="1"
                        />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvDisplay"
                    android:layout_below="@id/edLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    android:padding="2dp"
                    android:text=""
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    />

                <Button
                    android:id="@+id/bCalculate"
                    android:layout_below="@id/tvDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calculate"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/Fuchsia"
                    android:layout_centerHorizontal="true"
                    />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>