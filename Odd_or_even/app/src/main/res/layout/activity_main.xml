<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="3dp"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/privacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Privacy Statement"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/Baby_Blue"
                    />

                <TextView
                    android:id="@+id/heading"
                    android:layout_below="@id/privacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Check the number is it, Odd or Even !\n----------------------------------"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:background="@color/Baby_Blue"
                    android:padding="5dp"
                    android:gravity="center"
                    android:layout_marginBottom="15dp"
                    />

                <TextView
                    android:id="@+id/equstion"
                    android:layout_below="@id/heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter the number"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="19sp"
                    android:padding="5dp"
                    android:background="@color/Baby_Blue"
                    android:layout_marginBottom="10dp"
                    />

                <EditText
                    android:id="@+id/edNumber"
                    android:layout_below="@id/equstion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Number"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:inputType="numberDecimal"
                    android:textSize="22sp"
                    android:layout_marginBottom="15dp"
                    />
                <TextView
                    android:id="@+id/tvDisplay"
                    android:layout_below="@id/edNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="25sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp"
                    android:padding="5dp"
                    />

                <Button
                    android:id="@+id/bCalculate"
                    android:layout_below="@id/tvDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calculate"
                    android:textSize="22sp"
                    android:layout_centerHorizontal="true"
                    />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>